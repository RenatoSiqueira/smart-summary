# ============================================
# Smart Summary App - Environment Variables
# ============================================
# Copy this file to .env and update the values as needed
# DO NOT commit .env to version control

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=smartsummary
POSTGRES_PASSWORD=smartsummary123
POSTGRES_DB=smart_summary
POSTGRES_PORT=5432

# ============================================
# Application Environment
# ============================================
NODE_ENV=production
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# ============================================
# Backend Service Configuration
# ============================================
BACKEND_PORT=3000

# Database URL (auto-constructed from PostgreSQL settings above)
# Format: postgresql://USER:PASSWORD@postgres:5432/DATABASE
# Note: This is used when running in Docker. For local development,
# you may need to use localhost instead of 'postgres'
DATABASE_URL=postgresql://smartsummary:smartsummary123@postgres:5432/smart_summary

# API Key for backend authentication
# Generate a secure random string for production
API_KEY=your-api-key-here

# ============================================
# LLM Provider Configuration
# ============================================

# OpenRouter API (Required)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_DEFAULT_MODEL=gpt-3.5-turbo

# OpenAI API (Optional - only if you want to use OpenAI directly)
# Leave empty if not using OpenAI
OPENAI_API_KEY=
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo

# ============================================
# Frontend Service Configuration
# ============================================
FRONTEND_PORT=3001

# Public URL where the frontend will be accessible
# For local development: http://localhost:3001
# For production: https://your-domain.com
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# Backend API URL
# For Docker: http://backend:3000 (internal Docker network)
# For local development: http://localhost:3000
# For production: https://api.your-domain.com
API_URL=http://backend:3000
